@model HomePageModel
@using ApnaMarket.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div id="content" class="col-sm-12">
        @if (Model.Banners.Count > 0)
        {
            @Html.Partial("/Views/Home/_Banner.cshtml", Model.Banners)
        }
        <h3>
            Featured Products</h3>
