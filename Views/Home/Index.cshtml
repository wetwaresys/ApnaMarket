            @if (Model.HomeProducts.Count > 0)
            {
                @Html.Partial("/Views/Product/_HomeProduct.cshtml", Model.HomeProducts)
            }
        </div>
        <div id="carousel0" class="owl-carousel">
            <div class="item text-center">
                <img src="http://localhost:83/opencart/image/cache/catalog/demo/manufacturer/canon-130x100.png"
                    alt="Canon" class="img-responsive" />
            </div>
            <div class="item text-center">
                <img src="http://localhost:83/opencart/image/cache/catalog/demo/manufacturer/redbull-130x100.png"
                    alt="RedBull" class="img-responsive" />
            </div>
            <div class="item text-center">
                <img src="http://localhost:83/opencart/image/cache/catalog/demo/manufacturer/starbucks-130x100.png"
                    alt="Starbucks" class="img-responsive" />
            </div>
            <div class="item text-center">
                <img src="http://localhost:83/opencart/image/cache/catalog/demo/manufacturer/nfl-130x100.png"
                    alt="NFL" class="img-responsive" />
            </div>
            <div class="item text-center">
                <img src="http://localhost:83/opencart/image/cache/catalog/demo/manufacturer/harley-130x100.png"
