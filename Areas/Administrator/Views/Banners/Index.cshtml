@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
@section styles
{
    @*<link href="@Url.Content("/content/themes/base/jquery-ui.css")" rel="stylesheet" media="screen">*@
    <link href="@Url.Content("/datatables/dataTables.bootstrap.css")" rel="stylesheet" media="screen">
    <link href="@Url.Content("/datatables/css/jquery.dataTables.min.css")" rel="stylesheet" media="screen">
}
@section scripts
{
    <script src="@Url.Content("/datatables/js/jquery.dataTables.min.js")"></script>
}
<div class="page-header">
    <div class="container-fluid">
        <div class="pull-right">
            <a href="@Url.Action("Add", "Banners")"
                data-toggle="tooltip" title="Add New" class="btn btn-primary"><i class="fa fa-plus">
                </i></a>
            <button type="button" data-toggle="tooltip" title="Delete" class="btn btn-danger"
                onclick="confirm('Are you sure?') ? $('#form-banner').submit() : false;">
                <i class="fa fa-trash-o"></i>
            </button>
        </div>
        <h1>
            Banners</h1>
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index", "DashBoard")">Home</a></li>
            <li><a href="@Url.Action("Index", "Banners")">Banners</a></li>
        </ul>
    </div>
</div>
<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                <i class="fa fa-list"></i>Banner List</h3>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="table" cellpadding="0" cellspacing="0"
                    border="0">
                    <thead>
                        <tr>
                            <td style="width: 1px;" class="text-center">
                                <input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" />
                            </td>
                            <td class="text-left">
                                <a href="http://localhost:83/opencart/admin/index.php?route=design/banner&amp;token=Cl4CMERwlgW2LxhaTgWh9Cx05c0LTyQz&amp;sort=name&amp;order=DESC"
                                    class="asc">Banner Name</a>
                            </td>
                            <td class="text-left">
                                <a href="http://localhost:83/opencart/admin/index.php?route=design/banner&amp;token=Cl4CMERwlgW2LxhaTgWh9Cx05c0LTyQz&amp;sort=status&amp;order=DESC">
                                    Status</a>
                            </td>
                            <td class="text-right">
                                Action
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center">
                                <input type="checkbox" name="selected[]" value="7" />
                            </td>
                            <td class="text-left">
                                Home Page Slideshow
                            </td>
                            <td class="text-left">
                                Enabled
                            </td>
                            <td class="text-right">
                                <a href="http://localhost:83/opencart/admin/index.php?route=design/banner/edit&amp;token=Cl4CMERwlgW2LxhaTgWh9Cx05c0LTyQz&amp;banner_id=7"
                                    data-toggle="tooltip" title="Edit" class="btn btn-primary"><i class="fa fa-pencil">
                                    </i></a>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-center">
                                <input type="checkbox" name="selected[]" value="6" />
                            </td>
                            <td class="text-left">
                                HP Products
                            </td>
                            <td class="text-left">
                                Enabled
                            </td>
                            <td class="text-right">
                                <a href="http://localhost:83/opencart/admin/index.php?route=design/banner/edit&amp;token=Cl4CMERwlgW2LxhaTgWh9Cx05c0LTyQz&amp;banner_id=6"
                                    data-toggle="tooltip" title="Edit" class="btn btn-primary"><i class="fa fa-pencil">
                                    </i></a>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-center">
                                <input type="checkbox" name="selected[]" value="8" />
                            </td>
                            <td class="text-left">
                                Manufacturers
                            </td>
                            <td class="text-left">
                                Enabled
                            </td>
                            <td class="text-right">
                                <a href="http://localhost:83/opencart/admin/index.php?route=design/banner/edit&amp;token=Cl4CMERwlgW2LxhaTgWh9Cx05c0LTyQz&amp;banner_id=8"
                                    data-toggle="tooltip" title="Edit" class="btn btn-primary"><i class="fa fa-pencil">
                                    </i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>    $(document).ready(function () {

        try {

            $('#table').DataTable({
                "scrollY": "200px",
                "scrollCollapse": true,
                "paging": false
            });

        }
        catch (e) {
            alert(e);
        }
    });
</script>
